rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Preferences: userPreferences/{userId}
    match /userPreferences/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Per-user data: users/{userId}/items and users/{userId}/days
    match /users/{userId} {
      allow read, write: if false; // block direct access to /users root

      match /items/{itemId} {
        allow read, write: if isOwner(userId);
      }

      match /days/{dayId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Shared lists collection: sharedLists/{listId}
    // Document shape (expected fields):
    // {
    //   ownerId: string,
    //   sharedWith: array<string>,
    //   isPublic: bool,
    //   name: string,
    //   items: array<object>,
    //   createdAt: timestamp,
    //   lastUpdated: timestamp
    // }
    match /sharedLists/{listId} {
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // Read if authenticated AND (public, owner, or in sharedWith)
      allow get, list: if isSignedIn() && (
        resource.data.isPublic == true ||
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.sharedWith
      );

      // Update rules:
      // 1. Owner can update anything (except changing ownerId)
      // 2. Any authenticated user can update only recipientIds/lastUpdated on public lists (for tracking)
      allow update: if isSignedIn() && (
        // Owner can update (but can't change ownerId)
        (resource.data.ownerId == request.auth.uid && request.resource.data.ownerId == resource.data.ownerId) ||
        // Non-owners can only update recipientIds and lastUpdated on public lists
        (resource.data.isPublic == true &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['recipientIds', 'lastUpdated']))
      );

      // Delete: only owner
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }
  }
}

